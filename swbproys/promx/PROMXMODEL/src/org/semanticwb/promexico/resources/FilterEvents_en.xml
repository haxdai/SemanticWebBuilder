<?xml version="1.0" encoding="ISO-8859-1" ?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmin" action="true" method="post" jsframework="dojo">
        <admdbconnmgr defconn="true"/>
        <fieldset legend="Configuration data">
            <input type="text" id="noEvts" name="noEvts" maxlength="7" regExp="\d{1,3}" invalidMessage="Only numbers" label="Number events for show" jsrequired="true" jsvaltype="js_numbers"/>
        </fieldset>
        <fieldset>
            <input type="submit" name="btnSave" value="Save" />
            <input type="reset" name="btnReset" value="Cancel" />
        </fieldset>
    </form>
</admresource>
