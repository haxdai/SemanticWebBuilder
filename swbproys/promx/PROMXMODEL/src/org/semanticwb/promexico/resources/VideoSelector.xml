<?xml version="1.0" encoding="ISO-8859-1"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmin" action="true" method="post" enctype="multipart/form-data" jsframework="dojo">
        <admdbconnmgr defconn="true"/>
        <fieldset legend="Datos de configuración">
            <input type="text" id="cacheInMins" name="cacheInMins" label="Tiempo de cache en minutos" maxlength="7" regExp="\d{1,4}" invalidMessage="Solo se aceptan números" promptMessage="Minutos que durará la información del recurso en memoria" jsrequired="true" />
        </fieldset>
        <fieldset>
            <input type="submit" name="btnSave" id="btnSave" value="Guardar" />
            <input type="reset"  name="btnReset" id="btnReset" value="Restablecer" />
        </fieldset>
    </form>
</admresource>
