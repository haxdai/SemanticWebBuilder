<?xml version="1.0" encoding="utf-8"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<xslfile>admresource.xslt</xslfile>
	<form name="frmDSRes" action="true" method="post">
		<admdbconnmgr defconn="true"/>
        <fieldset>
            <statictext name="used">Configuraci√≥n Funcionamiento del Recurso</statictext>
            <input type="TEXT" name="num_comments_p_page" label="Comentarios por pagina:" size="5" regExp="\d{1,2}" jsrequired="true"/>
        </fieldset>
        <fieldset>
            <statictext name="b">
            <![CDATA[
            <button id="btnSave" dojoType="dijit.form.Button" type="submit">Guardar</button>
            <button id="btnReset" dojoType="dijit.form.Button">Reestablecer</button>
            ]]>
            </statictext>
        </fieldset>
	</form>

    <script type="text/javascript">
        <![CDATA[
        dojo.require("dijit.form.Button");

        dojo.addOnLoad(function(){
            dojo.connect(dijit.byId("btnSave"), "onClick",
                function() {
                        dojo.byId("frmMyShelf").submit();
                }
            );
        });

        dojo.addOnLoad(function(){
            dojo.connect(dijit.byId("btnReset"), "onClick",
                function() {
                    dojo.byId("frmMyShelf").reset();
                }
            );
        });
        ]]>
    </script>
</admresource>