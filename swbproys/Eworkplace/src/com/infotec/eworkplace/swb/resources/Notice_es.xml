<?xml version="1.0" encoding="UTF-8"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmRes" action="true" method="post" enctype="multipart/form-data" jsframework="dojo" >
        <admdbconnmgr defconn="true"/>

        <fieldset legend="Configuración básica">
            <input type="text" id="url" name="url" label="Dirección web" promptMessage="Dirección web" />
            <textarea id="msg" name="msg" label="Descripción" rows="5" cols="50" jsrequired="true" promptMessage="Descripción del aviso" />
        </fieldset>

        <fieldset>
            <input type="submit" name="btnSave" id="btnSave" value="Guardar" onclick="return jsValida(this.form)" />
            <input type="reset"  name="btnReset" id="btnReset" value="Restablecer" />
        </fieldset>
    </form>
</admresource>