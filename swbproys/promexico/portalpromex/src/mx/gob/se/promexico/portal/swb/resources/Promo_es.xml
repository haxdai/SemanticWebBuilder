<?xml version="1.0" encoding="ISO-8859-1"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmRes" action="true" method="post" enctype="multipart/form-data" jsframework="dojo" >
        <admdbconnmgr defconn="true"/>

        <fieldset legend="Configuración básica">
            <input type="text" id="urlinfo" name="urlinfo" label="Url para ver información" promptMessage="Dirección URL para ver información" />
            <input type="text" id="urldoc" name="urldoc" label="Url para ver documentación" promptMessage="Dirección URL para ver documentación" />
            <input type="text" id="urlpromo" name="urlpromo" label="Url para ver promocional" promptMessage="Dirección URL para ver promocional" jsrequired="true" />

            <input type="file" name="thmbn" label="Miniatura (jpg, jpeg, gif, png, swf)" showfile="true" filetype="jpg|jpeg|gif|png|swf" isshowfiletype="true" isremovefile="true" removemsg="Quitar imagen" size="40" />
            <input type="text" id="alt" name="alt" label="Texto alterno" promptMessage="Descripción alternativa. Pauta de accesibilidad" jsrequired="true" />

            <input type="file" name="poster" label="Cartel (jpg, jpeg, gif, png, swf)" showfile="true" filetype="jpg|jpeg|gif|png|swf" isshowfiletype="true" isremovefile="true" removemsg="Quitar imagen" size="40" />
            <input type="text" id="title" name="title" label="Título" promptMessage="Título del cartel" jsrequired="true" />

        </fieldset>

        <fieldset>
            <input type="submit" name="btnSave" id="btnSave" value="Guardar"  />
            <input type="reset"  name="btnReset" id="btnReset" value="Restablecer" />
        </fieldset>
    </form>
</admresource>