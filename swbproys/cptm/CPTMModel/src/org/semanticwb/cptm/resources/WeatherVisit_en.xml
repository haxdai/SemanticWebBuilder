<?xml version="1.0" encoding="ISO-8859-1"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmin" action="true" method="POST" enctype="multipart/form-data">
        <admdbconnmgr defconn="true"/>
        <fieldset>
            <input type="FILE" name="contTemplate" label="Content presentation template file (xsl, xslt):" showfile="true" msg="Current template" msgbydefault="Presentation template" filetype="xsl|xslt" isshowfiletype="true" size="50"/>
            <input type="FILE" name="stratTemplate" label="Strategy presentation template file (xsl, xslt):" showfile="true" msg="Current template" msgbydefault="Presentation template" filetype="xsl|xslt" isshowfiletype="true" size="50"/>
            <input type="text" id="cacheInMins" name="cacheInMins" label="Minutes to cache content" maxlength="7" regExp="\d{1,4}" invalidMessage="Just numbers accepted" promptMessage="Number of minutes that info lasts in memory" jsrequired="true" />
            <input type="text" id="pageId" name="pageId" label="Weather forecast webPage's id" maxlength="30" invalidMessage="Blanks and special characters are not allowed" promptMessage="Weather forecast webPage's id" jsrequired="true" />
        </fieldset>
        <fieldset>
            <input type="SUBMIT" name="btnSave"  value="Save" />
            <input type="RESET"  name="btnReset" value="Cancel" />
        </fieldset>
    </form>
</admresource>

