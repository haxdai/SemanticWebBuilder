<?xml version="1.0" encoding="utf-8"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmSeason" action="true" method="post" enctype="multipart/form-data" >
    <admdbconnmgr defconn="true"/>
    <fieldset>
        <input type="text" name="title" label="Título:" promptMessage="Título" />

        <statictext name="txtTarget">Temporada vacacional:</statictext>
        <input type="radio" name="season" label="Baja" value="baja" checked="true" />
        <input type="radio" name="season" label="Alta" value="alta"/>
    </fieldset>
    <fieldset>
        <statictext name="cmd">
        <![CDATA[
        <button id="btnSave" dojoType="dijit.form.Button">Guardar</button>
        <button id="btnReset" dojoType="dijit.form.Button">Reestablecer</button>
        ]]>
        </statictext>
    </fieldset>
    </form>

    <script type="text/javascript">
        <![CDATA[
        dojo.require("dijit.form.Button");
        dojo.require("dijit.form.ValidationTextBox");

        dojo.addOnLoad(
            function() {
                dojo.connect(dijit.byId("btnSave"), "onClick", function(){ dojo.byId("frmSeason").submit(); } );
                dojo.connect(dijit.byId("btnReset"), "onClick", function(){ dojo.byId("frmSeason").reset(); } );
            }
        );
        ]]>
    </script>
</admresource>