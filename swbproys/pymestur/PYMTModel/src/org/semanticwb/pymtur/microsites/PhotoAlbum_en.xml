        <input type="text" name="thnwidth" label="Thumbnail Image Width (pixeles):" maxlength="4" jsrequired="true" jsvaltype="js_numbers" invalidMessage="Invalid thumbnail width" promptMessage="Considering thumbnail width in pixels" />
