<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>

    <form name="frmPhotoAlbum" action="true" method="post" enctype="multipart/form-data">
    <fieldset legend="Datos">
        <input type="text" name="title" label="Title:" size="50"/>

        <input type="text" name="size" label="Maximum file size (bytes):" maxlength="7" jsvaltype="js_numbers" invalidMessage="Invalid file size" promptMessage="File size in bytes (1024 bytes = 1Kb, 1048576 bytes = 1MB)" />
        <input type="text" name="fileformat" label="Formatos de archivo permitidos:" jsrequired="true" promptMessage="Indique las extensiones de los formatos separados por coma" />

        <input type="text" name="width" label="Image Widht (pixeles):" maxlength="4" jsrequired="true" jsvaltype="js_numbers" invalidMessage="Invalid image width" promptMessage="Image width in pixels considering" />
