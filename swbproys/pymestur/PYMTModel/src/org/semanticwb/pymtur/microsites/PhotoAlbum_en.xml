        <input type="radio" name="gpophotos" label="Facilities" value="instalation"/>
        <input type="radio" name="gpophotos" label="Category" value="category"/>
        <input type="radio" name="gpophotos" label="More Photos" value="more"/>
    </fieldset>

    <fieldset>
        <input type="submit" name="btnSave" id="btnSave" value="Guardar" onclick="return jsValida(this.form)" />
        <input type="reset"  name="btnReset" id="btnReset" value="Restablecer" />
    </fieldset>
