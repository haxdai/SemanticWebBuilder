<?xml version="1.0" encoding="ISO-8859-1"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>

    <form name="frmAdmRes" action="true" method="post" enctype="multipart/form-data" jsframework="dojo" >
        <admdbconnmgr defconn="true"/>
        <fieldset legend="Aparência">
            <input type="file" name="template" label="Modelo (xsl, xslt): " showfile="true" filetype="xsl|xslt" isshowfiletype="true" isremovefile="true" removemsg="Remover modelo de processamento: " msg="Modelo atual transformação: " bydefault="{@webpath}swbadmin/xsl/WBMenuNivel/WBMenuNivel.xslt" msgbydefault="Modelo padrão de processamento: " jsrequired="false" />
        </fieldset>

        <fieldset legend="Definição da estratégia">
            <input type="text" name="basetopic" label="Base seção:" promptMessage="Id de la sección que sirve como inicio o base" />
            <input type="text" name="niveles" label="Mostrar o menu a este nível:" maxlength="3" jsvaltype="js_numbers" invalidMessage="Límite inválido" promptMessage="Mostrar-se a este nível a partir da seção de base" />
        </fieldset>

        <fieldset>
            <input type="submit" name="btnSave"  value="Salvar" />
            <input type="reset"  name="btnReset" value="Restabelecer"/>
        </fieldset>
    </form>
</admresource>
