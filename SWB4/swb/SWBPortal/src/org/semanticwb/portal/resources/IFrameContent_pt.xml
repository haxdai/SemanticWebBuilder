<?xml version="1.0" encoding="ISO-8859-1"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmIFrameContent" action="true" method="post" jsframework="dojo">
        <admdbconnmgr defconn="true"/>
        <fieldset legend="Dados">
            <input type="text" name="url" label="Url conteúdo:" size="50" jsrequired="true" promptMessage="Arquivo URL, absolutos ou relativos à seção" />
        </fieldset>
        <fieldset legend="Forma e Estilo">
            <input type="text" id="width"  name="width"  label="Anchura:" maxlength="4" regExp="\d{1,4}" invalidMessage="Ancho inválido" promptMessage="Caixa de largura em pixels considerados" />
            <input type="text" id="height" name="height" label="Altura:"  maxlength="4" regExp="\d{1,4}" invalidMessage="Altura inválida" promptMessage="Box altura em pixels considerados" />

            <select name="mimetype" label="Tipo de Mime:">
                <option value="text/html" />
                <option value="text/richtext" />
                <option value="text/rtf" />
                <option value="application/rtf" />
                <option value="application/pdf" />
                <option value="application/vnd.sun.xml.writer" />
                <option value="application/vnd.sun.xml.calc" />
                <option value="application/vnd.sun.xml.impress" />
                <option value="application/msword " />
                <option value="application/vnd.ms-excel" />
                <option value="application/vnd.ms-powerpoint" />
            </select>

            <input type="text" id="style" name="style" label="Estilo:" promptMessage="Estilo de la región" />
            <input type="text" id="cssclass" name="cssclass" label="Clase CSS:" promptMessage="Nombre de la clase CSS" />
            <statictext name="note">
		<![CDATA[
                <font style="color: #428AD4; font-family: Verdana; font-size:10px;">
                    * Dato requerido
                </font>
		]]>
            </statictext>
        </fieldset>

        <fieldset>
            <statictext name="cmd">
            <![CDATA[
            <button id="btnSave" type="submit" name="btnSave" dojoType="dijit.form.Button">Salvar</button>
            <button id="btnReset" type="reset" name="btnReset" dojoType="dijit.form.Button">Restabelecer</button>
            ]]>
            </statictext>
        </fieldset>
    </form>

    <script language="JavaScript">
        <![CDATA[
        dojo.require("dijit.form.Button");
        dojo.addOnLoad(function(){
            dojo.connect(dijit.byId("btnSave"),  "onClick", function(){ dojo.byId("frmWBBanner").submit(); } );
            dojo.connect(dijit.byId("btnReset"), "onClick", function(){ dojo.byId("frmWBBanner").reset(); } );
        });
    ]]>
    </script>
</admresource>