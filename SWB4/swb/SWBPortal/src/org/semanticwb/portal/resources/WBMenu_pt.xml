<?xml version="1.0" encoding="ISO-8859-1"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>

    <form name="frmAdmRes" action="true" method="post" enctype="multipart/form-data" jsframework="dojo">
        <admdbconnmgr defconn="true"/>
        <fieldset legend="Aparência">
            <input type="file" name="template" label="Modelo (xsl, xslt)" showfile="true" filetype="xsl|xslt" isshowfiletype="true" isremovefile="true" removemsg="Remover modelo de processamento: " msg="Pessoal atual: " bydefault="{@webpath}swbadmin/xsl/WBMenu/WBMenu.xslt" msgbydefault="Modelo padrão de processamento: " jsrequired="false" />
