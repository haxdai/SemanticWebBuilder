<?xml version="1.0" encoding="ISO-8859-1"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmRes" action="true" method="post" enctype="multipart/form-data" jsframework="dojo" >
    <admdbconnmgr defconn="true"/>
    <fieldset legend="Configuración de contenido">
        <input type="file" id="video" name="video" label="Video (flv, swf, avi, wmv, mov, rm, mp1, mp2, mp4)" showfile="true" filetype="flv|swf|avi|wmv|mov|rm|mp1|mp2|mp4" isshowfiletype="true" isremovefile="true" removemsg="Quitar video" size="40" />
        <input type="file" id="preview" name="preview" label="Imagen de previsualización" showfile="true" filetype="gif|jpg|bmp|png" isshowfiletype="true" isremovefile="true" removemsg="Quitar Imagen" size="40" />
        <statictext name="auto">Iniciar automáticamente</statictext>
        <input type="radio" id="automatic0" name="automatic" label="Si" value="true" checked="true" />
        <input type="radio" id="automatic1" name="automatic" label="No" value="false" />
        <statictext name="cntrls">Mostrar controles</statictext>
        <input type="radio" id="controls0" name="controls" label="Si" value="true" checked="true" />
        <input type="radio" id="controls1" name="controls" label="No" value="false" />
        <statictext name="lp">Reproducción continua</statictext>
        <input type="radio" id="loop0" name="loop" label="Si" value="true" checked="true" />
        <input type="radio" id="loop1" name="loop" label="No" value="false" />
    </fieldset>

    <div title="Video externo" open="false">
    <fieldset legend="Código YouTube">
        <textarea id="code" name="code" label="Código" rows="5" cols="50" promptMessage="Código youTube" />
    </fieldset>
    <fieldset legend="Código Google">
        <input type="text" id="google" name="google" label="Código identificador del video" maxlength="19" regExp="\d{10,19}" invalidMessage="Identificador del video inválida" promptMessage="Código identificador del video Google. Ejemplo: 4101054650025733885" />
    </fieldset>
    </div>

    <div title="Estilo" open="true">
    <fieldset legend="Aspecto del video local">
        <input type="text" id="width"  name="width" label="Ancho" maxlength="6" regExp="\d{1,6}" invalidMessage="Ancho inválido" promptMessage="Ancho del control. Ejemplos: 320" />
        <input type="text" id="height" name="height" label="Altura" maxlength="6" regExp="\d{1,6}" invalidMessage="Altura inválida" promptMessage="Altura del control. Ejemplos: 280" />
        <statictext name="bgcolor">
        <![CDATA[
        <table border="0" width="99%">
            <tr>
              <td align="right">Color de fondo (hexadecimal)</td>
              <td class="valores">
                <input type="text" id="bgcolor" name="bgcolor" value="{@db_bgcolor}" size="7" maxlength="7" />
                <span style="background-color:{@db_bgcolor};">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
              </td>
            </tr>
            <tr>
              <td class="datos" width="200px" align="right">Otro color<span id="plt_bgcolor"></span></td>
              <td class="valores">
                <div id="cp_bgcolor"></div>
              </td>
            </tr>
        </table>
        <script type="text/javascript">
            dojo.addOnLoad(function(){
                var myPalette = new dijit.ColorPalette( {palette:"7x10", onChange: function(val){ dojo.byId("bgcolor").value=val; dojo.byId("plt_bgcolor").style.color=val; dojo.byId("plt_bgcolor").innerHTML=val;}}, "cp_bgcolor" );
            });
        </script>
        ]]>
        </statictext>
    </fieldset>
    </div>

    <div title="Video FLV" open="false">
    <fieldset legend="Aspecto del video FLV">
