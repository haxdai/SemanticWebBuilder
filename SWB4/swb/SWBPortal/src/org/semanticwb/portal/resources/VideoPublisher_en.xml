<?xml version="1.0" encoding="ISO-8859-1"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmRes" action="true" method="post" enctype="multipart/form-data" jsframework="dojo" >
    <admdbconnmgr defconn="true"/>
    <fieldset legend="Configuración de contenido">
        <input type="radio" id="local0" name="local" label="Post a local video" value="0" checked="true" moreattr="onclick='if(this.checked){dojo.byId(&#34;code&#34;).disabled=true;dojo.byId(&#34;preview&#34;).disabled=true;dojo.byId(&#34;video&#34;).disabled=false; }'" />
        <input type="file" name="video" label="Video (flv, swf, avi, wmv, mov, rm, mp1, mp2, mp4):" showfile="true" filetype="flv|swf|avi|wmv|mov|rm|mp1|mp2|mp4" isshowfiletype="true" isremovefile="true" removemsg="Remove video" size="40" />
        <input type="file" id="preview" name="preview" label="Preview Image:" showfile="true" filetype="gif|jpg|bmp|png" isshowfiletype="true" isremovefile="true" removemsg="Remove image" size="40" />
        <statictext name="automatic">Start automatically:</statictext>
        <input type="radio" id="" name="" label="Yes" value="true" checked="true" />
        <input type="radio" id="" name="" label="No" value="false" />
        <statictext name="controls">Show controls:</statictext>
        <input type="radio" id="" name="" label="Yes" value="true" checked="true" />
        <input type="radio" id="" name="" label="No" value="false" />
        <statictext name="loop">Loop playback:</statictext>
        <input type="radio" id="" name="" label="Yes" value="true" checked="true" />
        <input type="radio" id="" name="" label="No" value="false" />
    </fieldset>

    <fieldset legend="Aspect of local video">
        <input type="text" id="width"  name="width" label="Width:" maxlength="9" regExp="\d{1,6}" invalidMessage="Invalid width" promptMessage="Image width. Example: 320" />
        <input type="text" id="height" name="height" label="Height:" maxlength="9" regExp="\d{1,6}" invalidMessage="Invalid height" promptMessage="Image height. Example: 280" />

        <select name="align" label="Align">
            <option value="left"></option>
            <option value="right"></option>
            <option value="center"></option>
        </select>
    </fieldset>

    <fieldset legend="You Tube">
        <input type="radio" id="local1" name="local" label="Post a YouTube Video" value="1" moreattr="onclick='if(this.checked){dojo.byId(&#34;code&#34;).disabled=false;dojo.byId(&#34;preview&#34;).disabled=false;dojo.byId(&#34;video&#34;).disabled=true; }'" />
        <textarea id="code" name="code" label="YouTube code:" rows="5" cols="50" promptMessage="YouTube code" />
    </fieldset>

    <fieldset>
        <input type="submit" name="btnSave" id="btnSave" value="Save" onclick="return jsValida(this.form)" />
        <input type="reset"  name="btnReset" id="btnReset" value="Reset" />
    </fieldset>
    </form>

    <script type="text/javascript">
        <![CDATA[
        dojo.addOnLoad(
            function() {
                if(!dojo.byId('local0').checked && !dojo.byId('local1').checked) {
                    dojo.byId('local0').checked=true;
                }
                if(!dojo.byId('local1').checked) {
                    dojo.byId('code').disabled=true;
                    dojo.byId('preview').disabled=true;
                }
            }
        );

        function jsValida(frm) {
            if(dojo.byId('local0').checked && !dojo.byId('video').value && !dojo.byId('wbNoFile_video')) {
                alert('Especifique un archivo de video');
                dojo.byId('video').focus();
                return false;
            }else if(dojo.byId('local1').checked) {
                if(dojo.byId('code').value==null || dojo.byId('code').value=='')
                {
                    alert('Set the encoding to include YouTube video.');
                    dojo.byId('code').focus();
                    return false;
                }
            }
            return true;
        }
        ]]>
    </script>
</admresource>