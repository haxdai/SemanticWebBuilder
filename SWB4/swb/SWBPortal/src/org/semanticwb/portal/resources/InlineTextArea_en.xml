<?xml version="1.0" encoding="utf-8"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<xslfile>admresource.xslt</xslfile>
	<form name="frmAdmin" action="true" method="POST" enctype="multipart/form-data">
        <admdbconnmgr defconn="true"/>
        <fieldset legend="Datos">
            <textarea name="text" label="Text:" rows="5" cols="38" wrap="virtual"/>
        </fieldset>
        <fieldset legend="Forma y estilo">
            <input type="TEXT" name="cssClass" label="CSS Class:" size="50" />
            <input type="TEXT" name="style" label="Style:" size="50" />
        </fieldset>
        <fieldset>
            <statictext name="b">
            <![CDATA[
            <button id="btnSave" dojoType="dijit.form.Button">Guardar</button>
            <button id="btnReset" dojoType="dijit.form.Button">Reestablecer</button>
            ]]>
            </statictext>
        </fieldset>
    </form>

    <script type="text/javascript">
        <![CDATA[
        dojo.require("dijit.form.Button");

        dojo.addOnLoad(function(){
            dojo.connect(dijit.byId("btnSave"), "onClick",
                function() {
                    dojo.byId("frmAdmin").submit();
                }
            );
        });

        dojo.addOnLoad(function(){
            dojo.connect(dijit.byId("btnReset"), "onClick",
                function() {
                    dojo.byId("frmAdmin").reset();
                }
            );
        });
        ]]>
    </script>
</admresource>