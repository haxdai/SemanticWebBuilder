<?xml version="1.0" encoding="ISO-8859-1"?> 
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmRes" action="true" method="post" jsframework="dojo" >
        <admdbconnmgr defconn="true"/>
        <fieldset legend="Configuración de contenido">
            <input type="text" name="url" label="Dirección Web" promptMessage="Dirección web" jsrequired="true"/>
            <input type="text" name="title" label="Título" promptMessage="Título" maxlength="55" regExp="[a-zA-Z0-9\u00C0-\u00FF' ]+" invalidMessage="Sólo letras, números y espacios"/>
        </fieldset>

        <div title="Apariencia" open="true">
        <fieldset legend="Dimensiones">
            <input type="text" name="width"  label="Ancho" value="640" maxlength="9" regExp="\d{1,7}(|px|in|cm|mm|pt|em|ex|%)" invalidMessage="Ancho inválido" promptMessage="Ancho. Ejemplos: 90%, 350px, 854" jsrequired="true" />
            <input type="text" name="height" label="Alto" value="480"  maxlength="9" regExp="\d{1,7}(|px|in|cm|mm|pt|em|ex|%)" invalidMessage="Altura inválida" promptMessage="Altura. Ejemplos: 90%, 350px, 854" jsrequired="true" />
            <input type="checkbox" name="fb" label="Borde" value="true" promptMessage="Mostrar borde en IE"/>
            <select name="scrolling" label="Barras de desplazamiento" promptMessage="Especifica si se muestran o no las barras de desplazamiento">
                <option value="no"/>
                <option value="yes"/>
                <option value="auto"/>
            </select>
        </fieldset>
        </div>
        
        <div title="Configuración Avanzada" open="true">
        <fieldset legend="Parámetros">
            <statictext name="txtAllow">Permitir paso de parámetros</statictext>
            <input type="radio" id="target1" name="passparam" label="Sí" value="1"/>
            <input type="radio" id="target0" name="passparam" label="No" value="0" checked="true"/>
        </fieldset>
        <fieldset legend="Script">
            <input type="text" name="script" label="Script" promptMessage="Javascript para el manejador del evento onLoad" />
        </fieldset>
        </div>

        <fieldset>
            <statictext name="note">
		<![CDATA[
                    <font style="color: #428AD4; font-family: Verdana; font-size: 10px;">* Dato requerido</font>
		]]>
            </statictext>            
            <input type="submit" name="btnSave" id="btnSave" value="Guardar" />
            <input type="reset"  name="btnReset" id="btnReset" value="Restablecer" />
        </fieldset>

    </form>
</admresource>