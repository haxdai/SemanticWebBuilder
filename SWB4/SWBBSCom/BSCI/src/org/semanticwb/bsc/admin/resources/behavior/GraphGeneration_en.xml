<?xml version="1.0" encoding="ISO-8859-1"?>
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmRes" action="true" id="frmAdmRes" method="POST">
            <fieldset legend="Dimensional configuration">
                <statictext name="fixed">If you want all the graphs of this type have the same size, configure the following:</statictext>
                <select name="graphHeight" label="Pixels for height">
                    <option value="">Select</option>
                    <option value="350">350</option>
                    <option value="400">400</option>
                    <option value="450">450</option>
                    <option value="500">500</option>
                    <option value="550">550</option>
                    <option value="600">600</option>
                    <option value="650">650</option>
                    <option value="700">700</option>
                    <option value="750">750</option>
                    <option value="800">800</option>
                </select>
                <select name="graphWidth" label="Pixels for width">
                    <option value="">Select</option>
                    <option value="350">350</option>
                    <option value="400">400</option>
                    <option value="450">450</option>
                    <option value="500">500</option>
                    <option value="550">550</option>
                    <option value="600">600</option>
                    <option value="650">650</option>
                    <option value="700">700</option>
                    <option value="750">750</option>
                    <option value="800">800</option>
                </select>
                <select name="rotateLabelV" label="Rotating labels">
                    <option value="">Select</option>
                    <option value="-90">-90°</option>
                    <option value="-85">-85°</option>
                    <option value="-80">-80°</option>
                    <option value="-75">-75°</option>
                    <option value="-70">-70°</option>
                    <option value="-65">-65°</option>
                    <option value="-60">-60°</option>
                    <option value="-55">-55°</option>
                    <option value="-50">-50°</option>
                    <option value="-45">-45°</option>
                    <option value="0">0°</option>
                    <option value="45">45°</option>
                    <option value="90">90°</option>
                </select>
                <statictext name="fixed">For each plot has a size proportional to the data set shown,
                     configure the following (this value takes precedence over the above):</statictext>
                <select name="barWidth" label="Pixels for width of each bar graphed">
                    <option value="">Select</option>
                    <option value="5">5</option>
                    <option value="7">7</option>
                    <option value="10">10</option>
                    <option value="12">12</option>
                    <option value="15">15</option>
                    <option value="20">20</option>
                </select>
            </fieldset>
            <fieldset legend="Dimensional configuration for PDF">
                <input type="text" id="width"  name="width" label="Image Width (px)" maxlength="9" regExp="\d{1,9}(|px|in|cm|mm|pt|em|ex|%)" invalidMessage="Ancho Inválido" promptMessage="Ancho de la imagen. Ejemplo:350 " />
                <input type="text" id="height" name="height" label="Image Height (px)" maxlength="9" regExp="\d{1,9}(|px|in|cm|mm|pt|em|ex|%)" invalidMessage="Altura Inválida" promptMessage="Altura de la imagen. Ejemplo: 350" />
            </fieldset>
    <fieldset>
        <input type="submit" name="btnSave" value="Save"/>
        <input type="reset"  name="btnReset" value="Reset" />
    </fieldset>
    </form>
</admresource>
